<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.interesting.cypress.rbac.dao.UserDao">

    <select id="getUser" parameterType="long" resultType="user">
        select * from cypress.user where id = #{id}
	</select>

    <insert id="addUser" parameterType="user" useGeneratedKeys="true" keyProperty="id">
        insert into `user`
        ( id,username,password,salt,email, mobile,status,creator,createTime )
        values
        (#{id},
        #{username},
        #{password},
        #{salt,jdbcType=VARCHAR},
        #{email},
        #{mobile},
        #{status},
        #{creator},
        #{createTime}  )
    </insert>

    <update id="updateUser" parameterType="user">
        update `user`
        <set>
            <if test="username != null ">username=#{username},</if>
            <if test="password != null ">password=#{password},</if>
            <if test="email != null ">locked=#{email},</if>
            <if test="mobile != null ">salt=#{mobile},</if>
            <if test="status != null ">salt=#{status},</if>
        </set>
        where id=#{id}
    </update>


    <delete id="deleteUsers">
        delete from `user` where id in
        <foreach item="userId" collection="list" open="(" separator="," close=")">
            #{userId}
        </foreach>
        ;
        delete from user_role where user_id in
        <foreach item="userId" collection="list" open="(" separator="," close=")">
            #{userId}
        </foreach>
    </delete>

    <!-- 查询用户的所有权限 -->
    <select id="getPermissions" resultType="string">
        select m.perms from user_role ur
        LEFT JOIN role_menu rm on ur.role_id = rm.role_id
        LEFT JOIN menu m on rm.menu_id = m.id
        where ur.user_id = #{userId}
    </select>

    <!-- 查询用户的所有菜单ID -->
    <select id="getMenuIds" resultType="long">
        select distinct rm.menu_id from user_role ur
        LEFT JOIN role_menu rm on ur.role_id = rm.role_id
        where ur.user_id = #{userId}
    </select>

    <select id="getRoleIds" resultType="long">
        select role_id from user_role where user_id = #{value}
    </select>


    <delete id="deleteRoles">
        delete from user_role
        where user_id = #{0} and role_id in
        <foreach collection="roleIds" item="u" index="i" open="(" separator="," close=")">
            #{u.id}
        </foreach>
    </delete>


    <!-- 给用户批量增加角色 -->
    <insert id="addRoles" >
        insert into user_role
        ( user_id,role_id)
        values
        <foreach collection="roleIds" item="rId" separator="," >
            (#{userId}, #{rId})
        </foreach>
    </insert>





</mapper>